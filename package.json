{
  "name": "recipes",
  "version": "1.0",
  "description": "a web based recipe database using sqlite and express.js",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "SITE_NAME='TestSite' SERVER_PASSWORD='test' nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build -t home.shotton.us:5443/recipes:latest .",
    "docker:push": "docker push home.shotton.us:5443/recipes:latest",
    "docker:build-push": "npm run docker:build && npm run docker:push",
    "docker:buildx:create": "docker buildx create --use --name recipes-builder || true",
    "docker:buildx:build": "docker buildx build --platform linux/amd64,linux/arm64 -t home.shotton.us:5443/recipes:latest --push .",
    "docker:buildx:buildamd": "docker buildx build --platform linux/amd64 -t home.shotton.us:5443/recipes:latest --push .",
    "docker:buildx:build-local": "docker buildx build --platform $(uname -m | sed 's/x86_64/amd64/;s/arm64/aarch64/') -t home.shotton.us:5443/recipes:latest --load ."
  },
  "author": "cshotton",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
